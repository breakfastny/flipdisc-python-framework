{
    "name": "Image",
    "name_plural": "Images",
    "icons": {
        "small": "icon/image.svg",
        "large": "icon/image.svg"
    },
    "system": {
        "name": "static_image",
        "entrypoint": "main.py",
        "execution_profile": "python"
    },
    "settings": [
        {
            "label": "Image",
            "name": "image",
            "type": "ImageUUID"
        },
        {
            "label": "Threshold",
            "name": "threshold",
            "type": "integer",
            "default": 128,
            "range": [0, 255]
        },
        {
            "label": "Invert",
            "name": "invert",
            "type": "boolean",
            "default": false
        },
        {
            "label": "Resize Mode",
            "name": "resize_mode",
            "type": "enum",
            "choices": ["stretch", "contain", "cover", "factor"],
            "default": "stretch"
        },
        {
            "label": "Resize Factor",
            "name": "resize_factor",
            "type": "number",
            "default": 1,
            "range": [0.1, 10.0],
            "step": 0.1
        }
    ],
    "instance_image": {
        "setting": "image"
    }
}
